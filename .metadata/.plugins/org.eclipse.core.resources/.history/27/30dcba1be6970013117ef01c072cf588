/*
 * The hiscore object stores the user, score & date of the
 * hiscore. It can parse a json string with said keys in it.
 */
package nl.mprog.evilspacemonsterhangman.models;

import java.io.IOException;
import java.util.Date;

import android.util.JsonReader;

public class HiScore {
	int score;
	String user;
	Date date;
	
	public HiScore(JsonReader reader) throws IOException {
		parseHiScore(reader);
	}
	
	public int getScore() {
		return score;
	}
	
	public String getUser() {
		return user;
	}
	
	public Date getDate() {
		return date;
	}
	
	private void setUserName(String user) {
		this.user = user;
	}
	
	private void setScore(int score) {
		this.score = score;
	}
	
	private void setDate(Date date) {
		this.date = date;
	}
	
	private static void parseHiScore(JsonReader reader) throws IOException {
		reader.beginObject();
		while (reader.hasNext()) {
			String name = reader.nextName();
			if(name.equals("user")) 
				setUserName(reader.nextString());
			if(name.equals("score")) 
		}
		
	     
	}
}
